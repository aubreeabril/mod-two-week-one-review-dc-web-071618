
<%= bootstrap_form_for(@sea) do |f| %>


  <%= f.text_field :name %>


  <%= f.number_field :temperature %>

  <%= f.text_area :bio %>


  <%= f.text_field :image_url %>

  <%= f.text_field :mood %>


  <%= f.text_field :favorite_color %>


  <%= f.text_field :scariest_creature %>


  <%= f.check_box :has_mermaids %>
  <div class="text-center row" style="margin: 1em">
    <div class="col-md-12">
  <%=  f.submit %>
    </div>
  </div>
</form>

  <% end %>

  <%= form_tag sea_path(@sea.id), method: "delete" do %>
  <%= submit_tag "Delete" %>
  <% end %>
